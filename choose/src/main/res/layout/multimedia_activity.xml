<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/multimedia_bg">
    <com.yongyongwang.multimedia.choose.view.MultimediaTopLayout
        android:id="@+id/multimedia_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.yongyongwang.multimedia.choose.view.TransitionView
        android:layout_below="@id/multimedia_top"
        android:layout_above="@id/multimedia_bottom"
        android:id="@+id/multimedia_transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.yongyongwang.multimedia.choose.view.MultimediaRecyclerView
        android:visibility="gone"
        android:layout_below="@id/multimedia_top"
        android:layout_above="@id/multimedia_bottom"
        android:id="@+id/multimedia_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.yongyongwang.multimedia.choose.view.MultimediaBottomLayout
        android:id="@+id/multimedia_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>