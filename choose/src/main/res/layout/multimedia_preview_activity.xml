<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/multimedia_preview_bg">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/multimedia_preview_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>

    <com.yongyongwang.multimedia.choose.view.MultimediaPreviewTopLayout
        android:id="@+id/multimedia_preview_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="#80000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.yongyongwang.multimedia.choose.view.MultimediaPreviewRecyclerview
            android:visibility="gone"
            android:id="@+id/multimedia_preview_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>
        <com.yongyongwang.multimedia.choose.view.MultimediaPreviewBottomLayout
            android:id="@+id/multimedia_preview_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>