<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/multimedia_common_height"
    android:background="@color/multimedia_theme">

    <TextView
        android:id="@+id/multimedia_bottom_edit"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/multimedia_choose_edit"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/multimedia_bottom_preview"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:minWidth="80dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/multimedia_bottom_preview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multimedia_choose_preview"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>