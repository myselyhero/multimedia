<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#000000">
    <com.yongyongwang.multimedia.choose.crop.view.ImageEditView
        android:id="@+id/crop_edit"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <com.yongyongwang.multimedia.choose.crop.view.SlideStepBar
        android:visibility="gone"
        android:id="@+id/crop_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <com.yongyongwang.multimedia.choose.crop.view.CropItemView
        android:visibility="gone"
        android:id="@+id/crop_ratio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cropModel="crop"/>
    <com.yongyongwang.multimedia.choose.crop.view.CropItemView
        android:visibility="gone"
        android:id="@+id/crop_abjust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cropModel="abjust"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/crop_edit_background"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/crop_edit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crop_edit_normal"/>
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/crop_edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="@string/crop_edit"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/crop_abjust_background"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/crop_abjust_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/crop_adjust_normal"/>
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/crop_abjust_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:text="@string/crop_abjust"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>